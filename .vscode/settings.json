{
    "editor.bracketPairColorization.enabled": true,
    "json.schemas": [
        {
            "url": "https://raw.githubusercontent.com/Ash258/Scoop-Core/main/schema.json",
            "fileMatch": [
                ".vscode/Template.jsonc",
                "bucket/*.json*",
                "bucket/old/**/*.json*",
                "deprecated/*.json*",
                "TODO/*.json*",
            ],
        },
    ],
    "powershell.codeFormatting.preset": "OTBS",
    "yaml.format.bracketSpacing": true,
    "yaml.format.enable": true,
    "yaml.format.singleQuote": true,
    "yaml.validate": true,
    "yaml.schemas": {
        "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/appveyor.json": [
            "*appveyor.y*ml",
        ],
        "https://raw.githubusercontent.com/Ash258/Scoop-Core/main/schema.json": [
            "bucket/*.y*ml",
            "bucket/old/**/*.y*ml",
            "deprecated/*.y*ml",
            "TODO/*.y*ml",
        ],
        "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/github-workflow.json": [
            ".github/workflows/*.y*ml",
        ],
    },
    "conventionalCommits.scopes": [
        "packwiz",
        "gpu-z-portable",
        "psst",
        "pso2-tweaker",
        "qbittorrent-enhanced",
        "reshade-addon",
        "gotmpl",
        "coqui-stt"
    ],
    "cSpell.words": [
        "autoupdate",
        "checkver",
        "coqui",
        "EPICGAMES",
        "gotmpl",
        "jsonpath",
        "packwiz",
        "PHANTASYSTARONLINE",
        "PLUGINSDIR",
        "qbittorrent",
        "reshade",
        "Tweaker"
    ],
}
